  <% if @user.errors.any? %>
  <div class="alert alert-warning">
    <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<h1>User info</h1>
<%= form_for(@user) do |f| %>
  <div class="form-group has-icon">
  	<label class="control-label sr-only" for="inputEmail"> Name </label>
  	<h4>name<%= f.text_field :name, autofocus: true, id: "inputEmail", class: "name" %></h4>
  	<span class="fa fa-user form-control-icon" aria-hidden= "true"></span>
  </div>
  <h4>Image</h4>
  <div class="form-group has-icon">
  	<div class="user-edit-image">
  		<%= attachment_image_tag @user, :profile_image, :fill, 60,60, class: "img-circle pull-left profile-thumb", fallback: "no_image.jpg" %>
  	</div>
  	<label class="control-label sr-only" for="inputEmail"> ProfileImage </label>
  	<%= f.attachment_field :profile_image, placeholder: "プロフィール画像", class: "user-edit-form user_image" %>
  </div>
  <h4>introduction</h4>
  <div class="form-group">
    <label class="control-label sr-only" for="inputEmail"> introduction </label>
    <%= f.text_area :introduction, class: 'form-introduction introduction' %>
  </div>
  <%= f.submit "Update User" %>
<% end %>