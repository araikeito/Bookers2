<% if flash[:notice] %>
  <p><%= flash[:notice] %></p>
<% end %>


<div class="container">
      <div class="row">
          <div class="col-lg-3">

            <%= render 'books/list', book: @book, user: @user %>
          </div>
          <div class="col-lg-9" >
            <h1>Books</h1>
            <table class="table table-striped">
              <tr>
        	    <th>Title</th>
              <th>Opinion</th>
              </tr>
              <% @books.each do |book| %>
              <tr>
              	<td><%= link_to book.title, book_path(book), class: "book_#{book.id}" %></td>
              	<td><%= book.body %></td>
              </tr>
              <% end %>
            </table>
          </div>
    </div>
</div>



