<% if flash[:notice] %>
 <p><%= flash[:notice] %></p>
<% end %>
<div class="container">
      <div class="row">
          <div class="col-lg-3">
          	<%= render 'books/list', book: @book, user: @user %>
          </div>
          <div class="col-lg-9">
			<h1>Book detail</h1>
			<table class="table table-striped">

			  <tr>
			  <th></th>
			  <th></th>
			  <th></th>
			  <th></th>
			  <th></th>
			  </tr>
			<tr>
				 <th><%= attachment_image_tag @user, :profile_image, :fill, 60, 60, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %></th>
				<th><%= @book.title %></th>
				<th><%= @book.body %></th>
				<% if @book.user.id == current_user.id %>
				<th><%= link_to "Edit",edit_book_path, class: "btn btn-success edit_book_#{current_user}" %></th>
				<th><%= link_to "Destroy", book_path(@book.id), class: "btn btn-danger destroy_book_#{current_user}", method: :delete, "data-confirm" => "本当に削除しますか？" %></th>
				<% end %>
			</tr>
		   </table>
		  </div>
	  </div>
</div>

