<% if flash[:notice] %>
<p><%= flash[:notice] %></p>
<% end %>

<div class="container">
  <div class="row">
    <div class="col-lg-3">

    <%= render 'books/list', book: @book, user: current_user %>
    </div>

    <div class="col-lg-9">
    <h1>Books</h1>
        <table class="table table-striped">

          <tr>
        	<th></th>
          <th>Title</th>
          <th>Opinion</th>
          </tr>
          <% @books.each do |book| %>
              <tr>
                <td><%= attachment_image_tag book.user, :profile_image, :fill, 60, 60, format: 'jpeg', class: "img-circle pull-left profile-img user_image", fallback: "no_image.jpg" %></td>
              	<td><%= link_to book.title, book_path(book) %></td>
              	<td><%= book.body %></td>
              </tr>
          <% end %>
        </table>

    </div>
  </div>
</div>

