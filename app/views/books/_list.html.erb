  <% if book.errors.any? %>
    <div class="alert alert-warning">
      <ul>
        <% book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <h2>User info</h2>
  <table>
     <div class="row">
       <%= attachment_image_tag user, :profile_image, :fill, 60, 60, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %></div>
      <tr>
        <th>name</th>
        <th><div class="profile-name"><%= user.name %></div></th>
      </tr>
      <tr>
        <th>introduction</th>
        <th><div class="profile-introduction"><%= user.introduction %></div></th>
      </tr>
      <tr>
        <td><% if user.id == current_user.id %>
       <%= link_to "user編集", edit_user_path(user), class: 'btn btn-default edit edit_user_#{id}' %></td>
       <% end %>
      </tr>
    </table>

    <h1>New Book</h1>

  <%= form_for(book) do |f| %>

  	<h4>Title</h4>
  	<%= f.text_field :title, class: "book_title" %>

  	<h4>opinion</h4>
  	<%= f.text_area :body, class: "book_body" %>

  	<p><%= f.submit 'Create Book', class: "btn btn-primary" %></p>

  <% end %>
