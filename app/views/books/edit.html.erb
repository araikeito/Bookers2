<div class="container">
      <div class="row">
          <div class="col-lg-4 col-lg-offset-4">

			<h1>Editing Book</h1>
			<%= form_for(@book) do |f| %>
			     <h4>Title</h4>
			     <%= f.text_field :title, class: "book_title" %>
			     <h4>Opinion</h4>
			     <%= f.text_area :body, class: "book_body" %>
			     <p><%= f.submit 'Update Book', class: "btn btn-primary" %></p>
			<% end %>
			<p><%= link_to "back", books_path, class: "back" %>
				<%= link_to "show", book_path, class: "book_#{@user}" %></p>
		  </div>
	  </div>
</div>